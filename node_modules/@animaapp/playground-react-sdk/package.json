{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@animaapp/playground-react-sdk",
  "version": "0.10.0",
  "description": "Playground React SDK for Anima",
  "author": "Anima App, Inc.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@tanstack/react-query": "5.90.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AnimaApp/anima-design-to-code.git",
    "directory": "playground-db/react-sdk"
  },
  "scripts": {
    "build": "vite build",
    "prepare:publish": "./scripts/prepare-for-publish.sh production",
    "prepare:publish:canary": "./scripts/prepare-for-publish.sh canary",
    "lint": "eslint src --ext .ts",
    "test": "vitest run --passWithNoTests",
    "publish": "npm run build && npm publish --access public",
    "publish:canary": "npm run build && npm publish --access public --tag canary",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^17.x.x || ^18.x.x || ^19.x.x"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.0.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "package.json"
  ]
}
